var state = document.getElementById("state-picker");

while (state.firstChild) state.removeChild(state.firstChild);

var placeholder = document.createElement("option");
placeholder.text = "Choose a country";
placeholder.value = "";
state.appendChild(placeholder);

<% @states.each do |c| %>
 	state.options[state.options.length] = new Option('<%= c[1] %>','<%= c[0] %>');
<% end %>  