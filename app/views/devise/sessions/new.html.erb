<body class="body">
  <div align=center>
    <%= image_tag "RSVPify-logo.png", :style => "    vertical-align: middle;width: 200px;height: 150px;" %>
  </div>

  <div class= "well  login">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6">
          <%= link_to 'Login with google', user_google_oauth2_omniauth_authorize_path, :class => "btn btn-primary"%>
        </div>

        <div class="col-md-6">
          <%= link_to 'Login with facebook' , user_facebook_omniauth_authorize_path , :class => "btn btn-danger" %>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %><br><br>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: 'form-control', autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: 'form-control', autocomplete: true %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
          <%= f.submit "Log in", :class => "btn   btn-success" %>
          <%= link_to  'Sign Up', new_user_registration_path %>
        <div class="pull-right">
          <%= link_to  'forget password',  new_user_password_path %>
        </div>
      <% end %>
    </div>
  </div>
</body>